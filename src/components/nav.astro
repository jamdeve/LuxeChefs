---
import Logo from '../assets/LOGO.png'

const logoSrc = Logo.src.startsWith('/') ? Logo.src.slice(1) : Logo.src;
import Trabajar from '../pages/trabajar.astro'
---

<script>
    //variables
    const nav = document.getElementById("nav");
    const menuMobile = document.getElementById("menu-mobile");
    const modalMobile = document.getElementById("mobile-modal")
    nav.style.backgroundColor = "transparent";
    nav.style.maxHeight = "0px"

    window.addEventListener("scroll",() => {
        let scrollY = window.scrollY;
        if (scrollY >= 50) {
        nav.style.backgroundColor = "#000";
        nav.style.maxHeight = "200px"
        nav.style.color = "rgb(255, 208, 90)";
        } else {
          nav.style.backgroundColor = "transparent";
          nav.style.maxHeight = "0px"
          nav.style.color = "white";
        }
    })

    menuMobile.addEventListener("click",() => {
        modalMobile.classList.toggle("disable");
    })


</script>

<nav class="nav" id="nav">
    <div class="wrapper nav-wrapper">
        <img class="logo" src={Logo.src} alt="Logo" />
        <svg class="menu-mobile" id="menu-mobile" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" style="fill: rgba(255, 255, 255, 1);transform: ;msFilter:;"><path d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z"></path></svg>
        <div class="menu-mobile-modal disable" id="mobile-modal">
            <div class="menu-mobile-container">
                <ul class="mobile-list">
                    <li class="mobile-list-item">
                        <a class="mobile-item-link" href="#inicio">INICIO</a>
                    </li>
                    <li class="mobile-list-item">
                        <a class="mobile-item-link" href="#somos">SOMOS</a>
                    </li>
                    <li class="mobile-list-item">
                        <a class="mobile-item-link" href="#servicios">SERVICIOS</a>
                    </li>
                    <li class="mobile-list-item">
                        <a class="mobile-item-link" href="#testimonios">TESTIMONIOS</a>
                    </li>
                    <li class="mobile-list-item">
                        <a class="mobile-item-link" href="#faq">FAQ</a>
                    </li>
                    <li class="mobile-list-item">
                        <a class="mobile-item-link" href="#contacto">CONTACTO</a>
                    </li>
                    <li class="mobile-list-item">
                        <a class="mobile-item-link" href={Trabajar}>TRABAJA CON NOSOTROS</a>
                    </li>
                    
                </ul>
            </div>
        </div>
        
        
        <ul class="list">
            <li class="list-item">
                <a class="item-link" href="/#inicio">INICIO</a>
            </li>
            <li class="list-item">
                <a class="item-link" href="/#somos">SOMOS</a>
            </li>
            <li class="list-item">
                <a class="item-link" href="/#servicios">SERVICIOS</a>
            </li>
            <li class="list-item">
                <a class="item-link" href="/#testimonios">TESTIMONIOS</a>
            </li>
            <li class="list-item">
                <a class="item-link" href="/#faq">FAQ</a>
            </li>
            <li class="list-item">
                <a class="item-link" href="/#contacto">CONTACTO</a>
            </li>
            
            <li class="list-item">
                <a class="item-link" href='/trabajar'>TRABAJA CON NOSOTROS</a>
            </li>
        </ul>
    </div>
</nav>

<style>
    
    .nav{
        color: white;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: black;
        transition: all 0.6s ease;
        z-index: 100;
       
    }

    .nav-wrapper
    {
        width: 100%;
        
        display: flex;
        justify-content: space-between;
        align-items: center;
    
    }

    .menu-mobile{
        display: none;
        position: relative;
        z-index: 100;
    }

    .logo{
        max-width: 130px;
    }

    .list{
        display: flex;
        justify-content: center;
        gap: 30px;
    }

    .list-item{
        list-style: none;
    }

    .item-link{
        text-decoration: none;
        color: white;
        font-size: 15px;
        letter-spacing: 1px;
        line-height: 50px;
        font-weight: 700;
        color: inherit;
        transition: all 0.2s ease;
    }

    .item-link:hover{
        opacity: 0.6;
        text-decoration: underline;
    }

    .menu-mobile-modal{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.897);
        opacity: 1;
        transform: translateY(0);
        transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .menu-mobile-container{
        position: relative;
        width: 100%;
        height: 100vh;
        
    }

    .mobile-list{
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 30px;
    }

    .mobile-list-item{
        list-style: none;
    }

    .mobile-item-link{
        text-decoration: none;
        color: white;
        font-size: 30px;
    }

    .disable{
        opacity: 0;
        transform: translateY(-100%);
    }

    @media screen and (max-width: 768px) {
        .menu-mobile{
            display: block;
            margin-right: 20px;
        }

        .list{
            display: none;
            
        }

    }


</style>